<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/titulo_main"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_bluetooth"
        android:id="@+id/btn_config_bt"
        android:layout_gravity="center_horizontal"
        android:onClick="configBT"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bluetooth_server"
        android:id="@+id/btn_bt_server"
        android:layout_gravity="center_horizontal"
        android:onClick="goToBluetoothServer"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bluetooth_client"
        android:id="@+id/btn_bt_client"
        android:layout_gravity="center_horizontal"
        android:onClick="goToBluetoothClient"
        />
</LinearLayout>