<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bluetooth.bluetoothserver" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Received"
            android:label="@string/title_activity_received" >
        </activity>
        <activity
            android:name=".BluetoothServerActivity"
            android:label="@string/title_activity_bluetooth_server" >
        </activity>
        <activity
            android:name=".BluetoothClientActivity"
            android:label="@string/title_activity_bluetooth_client" >
        </activity>
        <activity
            android:name=".PairedDevicesActivity"
            android:label="@string/title_activity_paired_devices" >
        </activity>
    </application>

</manifest>
